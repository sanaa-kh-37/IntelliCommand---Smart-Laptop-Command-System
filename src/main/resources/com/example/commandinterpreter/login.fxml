<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="40"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.commandinterpreter.controller.LoginController"
      style="-fx-background-color: linear-gradient(to bottom, #030213, #4c1d95, #a855f7);
             -fx-background-image:
                 radial-gradient(center 15% 25%, radius 2%, rgba(255,255,255,0.8) 0%, transparent 10%),
                 radial-gradient(center 40% 60%, radius 1.5%, rgba(255,255,255,0.6) 0%, transparent 8%),
                 radial-gradient(center 70% 40%, radius 2%, rgba(168,85,247,0.7) 0%, transparent 12%),
                 radial-gradient(center 90% 80%, radius 1.8%, rgba(255,255,255,0.5) 0%, transparent 10%),
                 radial-gradient(center 55% 90%, radius 2.2%, rgba(168,85,247,0.6) 0%, transparent 15%);
             -fx-background-size: cover;
             -fx-padding: 60;">

    <!-- Glass Card -->
    <VBox styleClass="auth-glass-card" alignment="CENTER" spacing="30" maxWidth="480">

        <!-- Glowing Title -->
        <Label text="Welcome Back!" styleClass="auth-glow-title"/>

        <!-- Subtitle -->
        <Label text="Log in to start commanding your PC"
               style="-fx-text-fill: #e9d5ff; -fx-font-size: 18px; -fx-opacity: 0.9;"/>

        <!-- Form -->
        <VBox spacing="25" alignment="CENTER">
            <TextField fx:id="usernameField"
                       promptText="Enter your username"
                       styleClass="auth-pill-field"/>

            <PasswordField fx:id="passwordField"
                           promptText="Enter your password"
                           styleClass="auth-pill-field"/>

            <!-- Buttons -->
            <VBox spacing="18" alignment="CENTER">
                <Button text="Login"
                        onAction="#handleLogin"
                        styleClass="auth-primary-button"/>

                <Button text="Register"
                        onAction="#handleRegister"
                        styleClass="auth-secondary-button"/>
            </VBox>
        </VBox>
    </VBox>
</VBox>