<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.commandinterpreter.controller.LoginController">
    <padding><Insets top="40" right="60" bottom="40" left="60"/></padding>

    <Label text="IntelliCommand Login" styleClass="header-label"/>

    <GridPane hgap="10" vgap="15">
        <Label text="Username:" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <Button text="Login" onAction="#handleLogin"/>
    <Button text="Register" onAction="#handleRegister"/>
</VBox>