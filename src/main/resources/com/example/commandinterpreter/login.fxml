<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="60"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.commandinterpreter.controller.LoginController"
      stylesheets="@/com/example/commandinterpreter/styles.css"
      style="-fx-background-color: linear-gradient(to bottom, #0f0020, #3a0070, #6f00b3);
             -fx-padding: 50;">

    <VBox styleClass="auth-glass-card"
          alignment="CENTER"
          spacing="45"
          prefWidth="540"
          prefHeight="740">

        <Label text="Login"
               styleClass="auth-title"
               style="-fx-font-style: italic;"/>

        <Label text="Welcome to IntelliCommand!"
               style="-fx-text-fill: #e6e0ff;
                      -fx-font-size: 19px;
                      -fx-font-weight: bold;
                      -fx-font-style: italic;
                      -fx-opacity: 0.95;"/>

        <VBox spacing="32" alignment="CENTER">

            <TextField fx:id="usernameField"
                       promptText="Enter your username"
                       styleClass="auth-field"/>

            <PasswordField fx:id="passwordField"
                           promptText="Enter your password"
                           styleClass="auth-field"/>
        </VBox>

        <VBox spacing="25" alignment="CENTER">

            <Button text="Login"
                    onAction="#handleLogin"
                    styleClass="auth-submit"/>

            <Button text="Register"
                    onAction="#handleRegister"
                    styleClass="auth-back"/>
        </VBox>

    </VBox>
</VBox>
