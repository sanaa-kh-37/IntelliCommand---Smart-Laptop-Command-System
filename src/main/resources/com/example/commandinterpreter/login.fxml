<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="30" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.commandinterpreter.controller.LoginController"
      style="-fx-background-color: #f5f7fa; -fx-padding: 60;">

    <!-- Title -->
    <Label text="Welcome to Intellicommand!"
           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Form Container -->
    <VBox spacing="20" alignment="CENTER" maxWidth="400">

        <!-- Username -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Username:"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="usernameField"
                       promptText="Enter your username"
                       prefWidth="280"
                       style="-fx-font-size: 16px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8;"/>
        </HBox>

        <!-- Password -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Password:"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <PasswordField fx:id="passwordField"
                           promptText="Enter your password"
                           prefWidth="280"
                           style="-fx-font-size: 16px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8;"/>
        </HBox>
        <!-- Buttons -->
        <VBox spacing="20" alignment="CENTER">
            <Button text="Login"
                    onAction="#handleLogin"
                    prefWidth="170"
                    style="-fx-font-size: 16px; -fx-font-weight: bold;
                   -fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #50C878 0%, #3498db 100%);
                   -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 12 30;"/>

            <Button text="Register"
                    onAction="#handleRegister"
                    prefWidth="170"
                    style="-fx-font-size: 16px; -fx-font-weight: bold;
                   -fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #50C878 0%, #3498db 100%);
                   -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 12 30;"/>
        </VBox>



    </VBox>
    </VBox>
