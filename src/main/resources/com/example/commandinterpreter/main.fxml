<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.commandinterpreter.controller.MainController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15; -fx-background-color: #2d2d30;">
            <Label text="IntelliCommand" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="themeButton" text="ðŸŒ™ Dark Mode" style="-fx-font-size: 16px; -fx-background-color: transparent; -fx-text-fill: white;" onAction="#toggleTheme"/>
