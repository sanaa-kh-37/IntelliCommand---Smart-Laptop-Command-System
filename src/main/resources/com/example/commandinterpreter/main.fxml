            </HBox>

            <!-- Output -->
            <TextArea fx:id="outputArea" editable="false" prefHeight="250" prefWidth="700" wrapText="true"
                      style="-fx-background-color: #00000080; -fx-text-fill: #e0e0e0; -fx-font-family: Consolas; -fx-background-radius: 15;"/>

            <!-- History List -->
            <ListView fx:id="historyList" prefHeight="200" prefWidth="700"/>
        </VBox>
    </center>
</BorderPane>