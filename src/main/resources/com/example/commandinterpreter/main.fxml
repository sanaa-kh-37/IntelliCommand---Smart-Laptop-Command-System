        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40; -fx-background-color: #1e1e1e; -fx-background-radius: 20;">
            <Label fx:id="userLabel" text="Logged in as: Guest" style="-fx-font-size: 16px; -fx-text-fill: #a0ffa0;"/>

            <!-- Quick Actions Bar -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="ðŸ“ Notepad" onAction="#quickNotepad" style="-fx-background-color: #007acc; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 15;"/>
                <Button text="ðŸ§® Calculator" onAction="#quickCalculator" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 15;"/>
                <Button text="ðŸ“¸ Screenshot" onAction="#quickScreenshot" style="-fx-background-color: #fd7e14; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 15;"/>
                <Button text="â–¶ YouTube" onAction="#quickYoutube" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 15;"/>
            </HBox>

            <!-- Command Input -->
            <ComboBox fx:id="commandCombo" promptText="Type a command..." prefWidth="600" editable="true"
                      style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 30; -fx-padding: 12; -fx-font-size: 18px;"/>

            <!-- Execute + Voice Button -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Execute âž¤" onAction="#handleExecute" style="-fx-background-color: #6e56ff; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 12 40; -fx-background-radius: 30;"/>
