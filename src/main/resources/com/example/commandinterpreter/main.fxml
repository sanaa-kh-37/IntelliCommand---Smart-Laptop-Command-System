<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.commandinterpreter.controller.MainController"
            stylesheets="@/styles.css">

    <!-- Header -->
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
            <Label text="IntelliCommand" styleClass="logo"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="userLabel" text="Logged in as: Guest" styleClass="user-label"/>
