            <Button text="â–¶ YouTube" onAction="#quickYoutube" styleClass="quick-button youtube-button"/>
            <Button text="ðŸ–¥ Task Manager" onAction="#quickTaskManager" styleClass="quick-button taskmanager-button"/>
            <Button text="âš™ Settings" onAction="#quickSettings" styleClass="quick-button settings-button"/>

            <Region VBox.vgrow="ALWAYS"/>
