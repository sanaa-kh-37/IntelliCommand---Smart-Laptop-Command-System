<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.commandinterpreter.controller.MainController"
            stylesheets="@styles.css">

    <!-- Header - Title Centered, User on Right -->
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
            <!-- Logo on the left -->
            <ImageView fitHeight="48" fitWidth="48" preserveRatio="true">
                <image>
                    <Image url="@logo.png" />
                </image>
            </ImageView>

            <!-- Project Title -->
            <Label text="IntelliCommand" styleClass="logo"/>

            <!-- Push user label to the right -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- User on the top-right -->
            <Label fx:id="userLabel" text="Logged in as: Guest" styleClass="user-label"/>
        </HBox>
    </top>

    <!-- Quick Actions - NOW ON THE LEFT -->
    <left>
        <VBox styleClass="quick-actions">
            <Label text="Quick Actions" styleClass="quick-label"/>

            <Button text="ðŸ“ Notepad" onAction="#quickNotepad" styleClass="quick-button"/>
            <Button text="ðŸ§® Calculator" onAction="#quickCalculator" styleClass="quick-button"/>
            <Button text="ðŸ“¸ Screenshot" onAction="#quickScreenshot" styleClass="quick-button"/>
            <Button text="â–¶ YouTube" onAction="#quickYoutube" styleClass="quick-button"/>
            <Button text="ðŸ–¥ Task Manager" onAction="#quickTaskManager" styleClass="quick-button"/>
            <Button text="âš™ Settings" onAction="#quickSettings" styleClass="quick-button"/>

            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
        </VBox>
    </left>

    <!-- History Panel - NOW ON THE RIGHT -->
    <right>
        <VBox styleClass="history-panel" spacing="15">
            <Button text="ðŸ“œ History â–¼" fx:id="historyToggleBtn" onAction="#toggleHistory" styleClass="history-toggle"/>
            <VBox fx:id="historyPanel" visible="false" managed="false" spacing="10">
                <Label text="Recent Commands" styleClass="quick-label"/>
                <ListView fx:id="historyList" prefHeight="400" prefWidth="280" styleClass="history-list"/>
            </VBox>
        </VBox>
    </right>

    <!-- Central Command Input -->
    <center>
        <VBox styleClass="command-section" spacing="25" alignment="CENTER">
            <TextField fx:id="commandInput" promptText="Type your command here..."
                       prefWidth="600" styleClass="command-input"/>
            <Button text="Execute âžœ" onAction="#handleExecute" styleClass="execute-button"/>
            <Label text="Type any command manually" styleClass="ai-hint"/>
        </VBox>
    </center>

</BorderPane>