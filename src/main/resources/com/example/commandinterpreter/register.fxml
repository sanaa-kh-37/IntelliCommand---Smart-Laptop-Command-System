
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="60"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.commandinterpreter.controller.RegisterController"
      style="-fx-background-color: linear-gradient(to bottom, #0f0020, #3a0070, #6f00b3);
             -fx-padding: 50;">

    <!-- Glassmorphism Card -->
    <VBox styleClass="auth-glass-card" alignment="CENTER" spacing="45" prefWidth="540" prefHeight="740">

        <!-- Title -->
        <Label text="Register" styleClass="auth-title"/>



        <!-- Subtitle -->
        <Label text="Join IntelliCommand and take control!"
               style="-fx-text-fill: #e6e0ff; -fx-font-size: 19px; -fx-opacity: 0.95;"/>

        <!-- Fields -->
        <VBox spacing="32" alignment="CENTER">

            <TextField fx:id="usernameField"
                       promptText="Enter your username"
                       prefWidth="120"
                       styleClass="auth-field"/>


            <PasswordField fx:id="passwordField"
                           promptText="Enter your password"
                           prefWidth="120"
                           styleClass="auth-field"/>

            <PasswordField fx:id="confirmPasswordField"
                           promptText="Confirm your password"
                           prefWidth="120"
                           styleClass="auth-field"/>
        </VBox>


        <VBox spacing="25" alignment="CENTER">

            <Button text="Submit"
                    onAction="#handleRegisterSubmit"
                    styleClass="auth-submit"/>


            <Button text="Back to Login"

                    onAction="#handleGoBackToLogin"
                    styleClass="auth-back"/>

        </VBox>
    </VBox>
</VBox>